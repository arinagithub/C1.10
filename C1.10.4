class Client:
    def __init__(self, name):
        self.name = name

    def get_name(self):
        return self.name


class Guest(Client):
    def __init__(self, name, city, status):
        super().__init__(name)
        self.city = city
        self.status = status

    def __str__(self):
        return f'«{self.name}, г. {self.city}, статус "{self.status}"»'


